<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.quadraminotest">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">

        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:configChanges="orientation">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".InfoActivity"
            android:label="@string/app_name"
            android:parentActivityName=".MainActivity"
            android:configChanges="orientation">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.quadraminotest.MainActivity" />
        </activity>
        <activity
            android:name=".SettingsActivity"
            android:label="Amazing Tetris"
            android:parentActivityName=".MainActivity"
            android:configChanges="orientation">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.quadraminotest.MainActivity" />
        </activity>

        <activity
            android:name=".LeaderboardSettingsActivity"
            android:label="Quadromino Storm"
            android:parentActivityName=".LeaderboardActivity"
            android:configChanges="orientation">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.quadraminotest.MainActivity" />
        </activity>
        <activity
            android:name=".LeaderboardActivity"
            android:label="@string/app_name"
            android:parentActivityName=".MainActivity"
            android:configChanges="orientation">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.quadraminotest.MainActivity" />
        </activity>
        <activity
            android:name=".GameActivity"
            android:label="@string/app_name"
            android:parentActivityName=".MainActivity"
            android:configChanges="orientation"
            android:screenOrientation="portrait">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.quadraminotest.MainActivity" />
        </activity>

        <provider
            android:name=".LeaderboardContentProvider"
            android:exported="true"
            android:readPermission="true"
            android:writePermission="true"
            android:authorities="com.indysoft.amazingtetris.contentprovider" />
    </application>

</manifest>